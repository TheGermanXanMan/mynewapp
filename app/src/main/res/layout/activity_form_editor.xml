<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/formNameEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Formularname"
        android:inputType="text" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/fieldListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <Button
        android:id="@+id/addFieldButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Neues Feld hinzufÃ¼gen" />

    <Button
        android:id="@+id/saveFormButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Formular speichern" />
</LinearLayout>
